{
  "name": "@qiwi/health-indicator",
  "version": "1.2.3",
  "description": "Health indicator kit for server-side monitoring & balancing",
  "main": "target/es5/index.js",
  "directories": {
    "source": "src/main",
    "test": "src/test"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target",
    "flow-typed"
  ],
  "@std/esm": {
    "mode": "all",
    "cjs": true
  },
  "scripts": {
    "flow": "flow",
    "flow:coverage": "flow-coverage-report -i 'src/main/**/*.js' -t html -t json -t text --threshold 90",
    "libdefs:fetch": "flow-typed install lodash-es@4.17.11",
    "jest": "jest --config=jest.config.json",
    "lint": "standard-flow src/**/*.js --fix",
    "test": "BABEL_ENV=test yarn flow:coverage && yarn lint && yarn jest",
    "build": "rm -rf ./target; BABEL_ENV=production babel src/main/js --out-dir target/es5",
    "test:report": "yarn test && yarn coveralls:push",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls",
    "postupdate": "yarn && yarn build && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:qiwi/health-indicator.git"
  },
  "keywords": [
    "health",
    "healtz",
    "healthcheck",
    "indicator",
    "monitoring"
  ],
  "author": "Anton Golub <a.golub@qiwi.com>",
  "license": "MIT",
  "dependencies": {
    "http-status-codes": "^1.3.2",
    "lodash-es": "^4.17.15"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-transform-modules-commonjs": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.6.2",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/github": "^6.0.0",
    "@semantic-release/npm": "^5.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.9.0",
    "babel-eslint": "^10.0.3",
    "babel-preset-minify": "^0.5.1",
    "chai": "^4.2.0",
    "chai-spies": "^1.0.0",
    "chai-subset": "^1.6.0",
    "coveralls": "^3.0.7",
    "eslint": "^6.5.1",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-flow": "^1.0.1",
    "flow-bin": "^0.109.0",
    "flow-coverage-report": "^0.6.1",
    "flow-remove-types": "^2.109.0",
    "flow-typed": "^2.6.1",
    "jest": "^24.9.0",
    "reqresnext": "^1.6.2",
    "semantic-release": "^15.13.27",
    "standard-flow": "^1.0.0"
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "standard-flow": {
    "parser": "babel-eslint",
    "globals": [
      "it",
      "expect",
      "describe"
    ],
    "ignore": [],
    "plugins": [
      "flowtype"
    ],
    "settings": {
      "flowtype": {
        "onlyFilesWithFlowAnnotation": true
      }
    }
  }
}
