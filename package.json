{
  "name": "@qiwi/health-indicator",
  "version": "1.2.2",
  "description": "Health indicator kit for server-side monitoring & balancing",
  "main": "dist/index.js",
  "directories": {
    "source": "src",
    "test": "test"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "dist/"
  ],
  "@std/esm": {
    "mode": "all",
    "cjs": true
  },
  "scripts": {
    "flow": "flow",
    "flow_coverage": "flow-coverage-report -i 'src/main/**/*.js' -t html -t json -t text --threshold 90",
    "fetch_libdefs": "flow-typed install lodash-es@4.17.11",
    "jest": "jest --config=jest.config.json",
    "lint": "standard-flow src/**/*.js test/**/*.js --fix",
    "test": "BABEL_ENV=test yarn flow_coverage && yarn lint && yarn jest",
    "build": "rm -rf ./dist; BABEL_ENV=production babel src/main --out-dir dist",
    "test_with_report": "yarn test && yarn coveralls_push",
    "coveralls_push": "cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:qiwi/health-indicator.git"
  },
  "keywords": [
    "health",
    "healtz",
    "healthcheck",
    "indicator",
    "monitoring"
  ],
  "author": "Anton Golub <a.golub@qiwi.com>",
  "license": "MIT",
  "dependencies": {
    "http-status-codes": "^1.3.2",
    "lodash-es": "^4.17.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.4.4",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.7",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.8.0",
    "babel-eslint": "^10.0.1",
    "babel-preset-minify": "^0.5.0",
    "chai": "^4.2.0",
    "chai-spies": "^1.0.0",
    "chai-subset": "^1.6.0",
    "coveralls": "^3.0.4",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-config-standard-flow": "^1.0.1",
    "flow-bin": "^0.100.0",
    "flow-coverage-report": "^0.6.1",
    "flow-remove-types": "^2.100.0",
    "flow-typed": "^2.5.2",
    "jest": "^24.8.0",
    "reqresnext": "^1.5.1",
    "semantic-release": "^15.13.12",
    "standard-flow": "^1.0.0"
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "standard-flow": {
    "parser": "babel-eslint",
    "globals": [
      "it",
      "expect",
      "describe"
    ],
    "ignore": [],
    "plugins": [
      "flowtype"
    ],
    "settings": {
      "flowtype": {
        "onlyFilesWithFlowAnnotation": true
      }
    }
  }
}
